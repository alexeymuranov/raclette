<%= form_tag sessions_path, :class => "login_form" do %>
  <dl class="form_fields">
    <div class="caption"><%= t '.log_in' %></div>
    <div>
      <dt>
        <%= label_tag :username, t('sessions.labels.username') %>
      </dt>
      <dd>
        <%= text_field_tag :username %>
      </dd>
    </div>
    <div>
      <dt>
        <%= label_tag :password, t('sessions.labels.password') %>
      </dt>
      <dd>
        <%= password_field_tag :password %>
      </dd>
    </div>
    <div>
      <dt>
        <%= t 'sessions.labels.your_ip_address' %>
      </dt>
      <dd>
        <%= @client_ip %>
      </dd>
    </div>
  </dl>
  <div class="actions">
    <%= submit_tag t('.log_in') %>
  </div>
<% end %>
<div id="welcome_logo">
  <%= logo(2) %>
</div>
