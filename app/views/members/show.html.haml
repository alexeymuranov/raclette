%h1= t '.header', :name => @member.full_name

%section
  %h2= t 'members.show.subheaders.member_data'

  %dl.show
    - @attributes.each do |attr|

      = render 'shared/lists/attribute_in_show',
               :model       => @member,
               :attribute   => attr,
               :column_type => @column_types[attr]

%section
  %h2= Person.human_attribute_name(:attended_events)

  = render('shared/tables/simple_index',
           :models                    => @attended_events,
           :attributes                => @attended_events_attributes,
           :column_types              => @events_column_types,
           :column_headers            => @events_column_headers,
           :html_table_id             => :attended_events) unless @attended_events.empty?

%section
  %h2= Member.human_attribute_name(:memberships)

  = render('shared/tables/simple_index',
           :models                    => @memberships,
           :attributes                => @memberships_attributes,
           :column_types              => @memberships_column_types,
           :column_headers            => @memberships_column_headers,
           :html_table_id             => :memberships) unless @memberships.empty?

%footer
  = link_to edit_pictogram(3) + ' ' + t('members.edit.header',
                                        :name => @member.full_name),
            edit_member_path(@member),
            :class => 'modify resource'
  = link_to list_all_pictogram(3) + ' ' + t('members.index.header'),
            members_path,
            :class => 'display resource'

-# End of the main body of the view

- content_for :side_menu_list_items do
  %li
    = link_to list_all_pictogram + ' ' + t('members.index.title'),
              members_path,
              :class => 'display resource'
  %li
    = link_to add_pictogram + ' ' + t('members.new.title'),
              new_member_path,
              :title => t('actions.create'),
              :class => 'add resource'
