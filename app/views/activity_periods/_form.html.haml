= form_for @activity_period, :as => :activity_period,
           :url => @activity_period_form_url do |f|

  = render 'shared/error_messages/validation', :target => @activity_period

  %dl.form_fields

    - @attribute_names.each do |attr_name|

      = render 'shared/forms/attribute',
               :form_builder => f,
               :attribute    => attr_name

  .actions
    = f.submit
