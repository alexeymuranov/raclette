<% content_for :side_menu_list_items do %>
  <li>
    <%= link_to t('admin.known_i_ps.links.new'), new_admin_known_ip_path,
                :title  => t('actions.create'),
                :class => 'modify' %>
  </li>
<% end %>

<h1><%= t '.header' %></h1>

<table class="records">
  <col /><col /><col /><col />
  <thead>
    <tr>
      <th><%= t 'field_labels.ip' %></th>
      <th><%= t 'field_labels.description' %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @known_ips.each do |known_ip| %>
      <tr>
        <th span="row">
          <%= link_to known_ip.ip, known_ip,
                      :title => t('actions.read'),
                      :class => 'display' %>
        </th>
        <td><%= known_ip.description %></td>
        <td>
          <%= link_to edit_icon, edit_admin_known_ip_path(known_ip),
                      :title => t('actions.update'),
                      :class => 'modify' %>
        </td>
        <td>
          <%= link_to delete_icon, known_ip,
                      :confirm => t("questions.are_you_sure?"),
                      :method => :delete,
                      :title  => t('actions.delete'),
                      :class  => 'modify' %>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>

<footer>
  <%= link_to add_icon(2)+' '+t('admin.known_i_ps.links.new'), new_admin_known_ip_path,
              :title  => t('actions.create'),
              :class => 'modify' %>
</footer>