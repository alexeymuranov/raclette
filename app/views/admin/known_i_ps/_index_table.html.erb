<%= content_tag :table, :id => :known_ips, :class => 'records' do %>
  <colgroup class="attributes">
    <% @attributes.size.times do %><col /><% end %>
  </colgroup>
  <colgroup><col /><col /></colgroup>
  <thead>
    <tr>
      <% @attributes.each do |attribute| %>
        <th>
          <%= sortable :known_ips,
                       attribute,
                       Admin::KnownIP.human_attribute_name(attribute) %>
        </th>
      <% end %>

      <th class="empty"></th>
      <th class="empty"></th>
    </tr>
  </thead>
  <tbody>
      <%= render :partial => 'shared/model_in_index',
                 :collection => @known_ips,
                 :as => :model,
                 :locals => { :attributes => @attributes,
                              :column_types_o_hash => @column_types_o_hash,
                              :edit_path_helper_method => method(:edit_admin_known_ip_path) } %>
  <tbody>
<% end %>
