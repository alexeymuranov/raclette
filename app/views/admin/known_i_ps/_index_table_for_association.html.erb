<%= content_tag :table, :id => table_name, :class => 'associated records' do %>
  <colgroup class="attributes">
    <% attributes.size.times do %><col /><% end %>
  </colgroup>
  <thead>
    <tr>
      <% attributes.each do |attribute| %>
        <th>
          <%= sortable table_name,
                       attribute,
                       Admin::KnownIP.human_attribute_name(attribute) %>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render :partial => 'shared/model_in_index_for_association',
               :collection => known_ips,
               :as => :model,
               :locals => { :attributes => attributes,
                            :column_types_o_hash => column_types_o_hash } %>
  </tbody>
<% end %>
