<%= content_tag :table, :id => table_name, :class => "associated records" do %>
  <colgroup class="attributes">
    <% @displayed_columns.size.times do %>
      <col />
    <% end %>
  </colgroup>
  <thead>
    <tr>
      <% displayed_columns.each do |attribute| %>
        <th>
          <%= sortable table_name,
                       attribute,
                       Admin::KnownIP.human_attribute_name(attribute) %>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render :partial => 'admin/known_i_ps/known_i_p_in_index_for_association',
               :collection => known_ips,
               :as => :known_ip,
               :locals => { :displayed_columns => displayed_columns } %>
  </tbody>
<% end %>
