<%= form_for(@known_ip) do |f| %>
  <% if @known_ip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@known_ip.errors.count, "error") %> prohibited this known IP from being saved:</h2>

      <ul>
      <% @known_ip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= field_set_tag do %>
    <dl class="form_fields">
      <% if @known_ip.new_record? %>
        <div class="field">
          <dt><%= f.label :ip, t('field_labels.ip') %></dt>
          <dd><%= f.text_field :ip, :required => :required %>*</dd>
        </div>
      <% else %>
        <div class="field">
          <dt><b><%= t 'field_labels.ip' %></b></dt>
          <dd><%= @known_ip.ip %></dd>
        </div>
      <% end %>
      <div class="field">
        <dt><%= f.label :description, t('field_labels.description') %></dt>
        <dd><%= f.text_field :description %></dd>
      </div>
    </dl>
  <% end %>

  <div class="actions" style="text-align:center;">
    <%= f.submit t('buttons.save') %>
  </div>
<% end %>
