<%= form_for(@known_ip) do |f| %>

  <%= render 'validation_error_messages' %>


  <%= field_set_tag do %>
    <dl class="form_fields">
      <% if @known_ip.new_record? %>
        <div class="item">
          <dt><%= f.label :ip,
                          t('formats.attribute_name:',
                            :attribute => Admin::KnownIP.human_attribute_name(:ip)) %></dt>
          <dd class="required readonly input">
            <%= f.text_field :ip, :size => 30, :maxlength => 15, :required => :required %><!-- no space! --></dd>
        </div>
      <% else %>
        <div class="item field">
          <dt><b><%= t('formats.attribute_name:',
                       :attribute => Admin::KnownIP.human_attribute_name(:ip)) %></b></dt>
          <dd><%= @known_ip.ip %></dd>
        </div>
      <% end %>

      <div class="item field">
        <dt><%= f.label :description,
                        t('formats.attribute_name:',
                          :attribute => Admin::KnownIP.human_attribute_name(:description)) %></dt>
        <dd><%= f.text_field :description, :size => 30, :maxlength => 255 %></dd>
      </div>
    </dl>
  <% end %>

  <div class="actions">
    <%= f.submit t('buttons.save') %>
  </div>
<% end %>
