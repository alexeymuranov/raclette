<h1><%= t '.header' %></h1>

<table style="width:auto;">
  <tr>
    <th></th>
    <% @known_ips.each do |known_ip| %>
      <% note = known_ip.description.blank? ? "" : " (#{known_ip.description})" %>
      <th style='text-align:center;'><%= link_to "#{known_ip.ip}#{note}", known_ip, :title => t('actions.read') %></th>
    <% end %>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.username, user, :title => t('actions.read') %></td>
      <% @known_ips.each do |known_ip| %>
        <td style='text-align:center;'>
          <%= user.safe_ips.include?(known_ip) ? yes_icon : t(:no) %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<hr/>

