%h1= t '.header'

%section

  %h2= t 'headers.data'

  %section

    %h3
      = link_to list_all_pictogram(2) + ' ' + t('admin.users.index.title'),
                users_path,
                :class => 'display resource'

    %ul.compact
      - @users.each do |user|
        -# TODO:report a bug: "user_path(user)" cannot be replaced with "user" here, despite that it works in development, tests give "undefined method `admin_user_path'" (it should be `user_path')
        %li
          = link_to show_pictogram(2) + ' ' + user.username, user_path(user),
                    :class => 'display resource'

    %footer
      = link_to add_pictogram(2) + ' ' + t('admin.users.new.header'),
                new_user_path,
                :title => t('actions.create'),
                :class => 'add resource'

  %section

    %h3
      = link_to list_all_pictogram(2) + ' ' + t('admin.known_i_ps.index.title'),
                known_ips_path,
                :class => 'display resource'

    %ul.compact
      - @known_ips.each do |known_ip|
        - note = known_ip.description.blank? ? '' : " (#{known_ip.description})"
        -# TODO:same about "known_ip_path(known_ip)"
        %li
          = link_to show_pictogram(2) + ' ' + known_ip.ip+note, known_ip_path(known_ip),
                    :class => 'display resource'

    %footer
      = link_to add_pictogram(2) + ' ' + t('admin.known_i_ps.new.header'),
                new_known_ip_path,
                :title => t('actions.create'),
                :class => 'add resource'

  %section

    %h3
      = link_to list_all_pictogram(2) + ' ' + t('admin.safe_user_i_ps.index.title'),
                safe_user_ips_path,
                :class => 'display resource'

%section

  %h2= t 'headers.tools'

-# End of the main body of the view

- content_for :side_menu_list_items do
  %li
    = link_to list_all_pictogram + ' ' + t('admin.users.index.title'),
                users_path,
                :class => 'display resource'
  %li
    = link_to list_all_pictogram + ' ' + t('admin.known_i_ps.index.title'),
                known_ips_path,
                :class => 'display resource'
  %li
    = link_to list_all_pictogram + ' ' + t('admin.safe_user_i_ps.index.title'),
                safe_user_ips_path,
                :class => 'display resource'
