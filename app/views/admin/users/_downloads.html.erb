<%= form_tag url_for(:format => :ms_excel_2003_xml),
                  :method => :get,
                  :id     => 'download_users',
                  :target => '_blank' do %>
  <%#= store_hash_in_hidden_form_fields params.except(:controller, :action) %>

  <span class="actions">
    <%= hidden_field_tag :query_type, 'render_alternative_format' %>
    <%= content_tag :button, t('buttons.render_resources_in_format',
                               :resources   => t('admin.users.index.terms.filtered_users'),
                               :file_format => 'MS Excel 2003 XML'),
                    :name  => 'button',
                    :type  => 'submit',
                    :value => 'download_button' %>
  </span>
<% end %>

