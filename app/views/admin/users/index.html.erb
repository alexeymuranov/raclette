<h1><%= t '.header' %></h1>

<table>
  <tr>
    <th><%= t('admin.users.labels.username') %></th>
    <th><%= t('admin.users.labels.full_name') %></th>
    <th><%= t('admin.users.labels.email') %></th>
    <th><%= t('admin.users.labels.admin') %></th>
    <th><%= t('admin.users.labels.manager') %></th>
    <th><%= t('admin.users.labels.secretary') %></th>
    <th><%= t('admin.users.labels.person') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.full_name %></td>
    <td><%= user.email %></td>
    <td><%= user.admin? ? t(:yes) : t(:no) %></td>
    <td><%= user.manager? ? t(:yes) : t(:no)  %></td>
    <td><%= user.secretary? ? t(:yes) : t(:no)  %></td>
    <td><%= user.a_person? ? t(:yes) : t(:no) %></td>
    <td><%= link_to t('admin.users.links.show'), user %></td>
    <td><%= link_to t('admin.users.links.update'), edit_admin_user_path(user),
                    :class => 'modify' %></td>
    <td><%= link_to t('admin.users.links.delete'), user,
                      :confirm => t(:are_you_sure, :scope => :questions),
                    :method => :delete,
                    :class  => 'modify' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('admin.users.links.new'), new_admin_user_path,
            :class => 'modify' %>
