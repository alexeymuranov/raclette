<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %>
        prohibited this user from being saved:
      </h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'common_form_fields', :f => f %>

  <fieldset>
    <legend><%= t 'admin.users.new.captions.password' %></legend>
    <table class="fields">
      <tr class="field">
        <td><%= f.label :password, t('admin.users.labels.password') %></td>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr class="field">
        <td><%= f.label :password_confirmation,
                        t('admin.users.labels.password_confirmation') %></td>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>
    </table>
  </fieldset>

  <fieldset>
    <legend><%= t 'admin.users.new.captions.authorized_ips' %></legend>
    <table class="fields">
      <tr>
        <th>
          <%= t 'field_labels.ip' %>
        </th>
        <th>
          <%= t 'field_labels.description' %>
        </th>
        <th style='text-align:center;'>
          <%= t 'field_labels.authorized?' %>
        </th>
      </tr>
      <% @known_ips.each do |known_ip| %>
      <tr>
        <td>
          <%= label_tag "admin_user[known_ip_is_safe][#{known_ip.id}]", known_ip.ip %>
        </td>
        <td>
          <%= known_ip.description %>
        </td>
        <td style='text-align:center;'>
          <%= check_box_tag "admin_user[known_ip_is_safe][#{known_ip.id}]", "0", false %>
        </td>
      </tr>
      <% end %>
    </table>
  </fieldset>

  <fieldset>
    <legend><%= t 'admin.users.new.captions.other' %></legend>
    <div class="field">
      <%= f.label :comments, t('admin.users.labels.comments'), :style => "vertical-align:top;" %>
      <%= f.text_area :comments %>
    </div>
  </fieldset>

  <div class="actions" style="text-align:center;">
    <%= f.submit t('buttons.save') %>
  </div>
<% end %>
