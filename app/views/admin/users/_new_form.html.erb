<%= form_for(@user) do |f| %>

  <%= render 'validation_error_messages' %>

  <%= render 'common_form_fields', :f => f %>

  <%= field_set_tag t('admin.users.new.subheaders.password') do %>
    <dl class="form_fields">

      <%= render 'shared/attribute_in_form',
                 :form_builder       => f,
                 :model              => @user,
                 :attribute          => :password,
                 :input_html_options => { :type => :password } %>

      <%= render 'shared/attribute_in_form',
                 :form_builder       => f,
                 :model              => @user,
                 :attribute          => :password_confirmation,
                 :input_html_options => { :type => :password } %>

    </dl>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
