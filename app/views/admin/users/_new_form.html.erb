<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %>
        prohibited this user from being saved:
      </h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'common_form_fields', :f => f %>

  <%= field_set_tag t('admin.users.new.captions.password') do %>
    <dl class="form_fields">
      <div class="field">
        <dt><%= f.label :password, t('field_labels.password') %></dt>
        <dd><%= f.password_field :password, :size => 30, :maxlength => 255 %></dd>
      </div>
      <div class="field">
        <dt><%= f.label :password_confirmation,
                        t('field_labels.password_confirmation') %></dt>
        <dd><%= f.password_field :password_confirmation, :size => 30, :maxlength => 255 %></dd>
      </div>
    </dl>
  <% end %>

  <div class="actions">
    <%= f.submit t('buttons.save') %>
  </div>
<% end %>
