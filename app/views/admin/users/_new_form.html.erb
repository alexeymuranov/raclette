<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %>
        prohibited this user from being saved:
      </h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'common_form_fields', :f => f %>

  <%= field_set_tag t('admin.users.new.captions.authorized_ips') do %>
    <table class="form_fields">
      <colgroup><col /><col /><col /></colgroup>
      <thead>
        <tr>
          <th>
            <%= t 'field_labels.ip' %>
          </th>
          <th>
            <%= t 'field_labels.description' %>
          </th>
          <th class='boolean'>
            <%= t 'field_labels.authorized?(ip)' %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @known_ips.each do |known_ip| %>
        <tr>
          <th scope=row>
            <%= label_tag "admin_user_safe_ip_ids_#{known_ip.id}", known_ip.ip %>
          </th>
          <td>
            <%= known_ip.description %>
          </td>
          <td class='boolean'>
            <%= check_box_tag "admin_user[safe_ip_ids][]", known_ip.id, false, :id => "admin_user_safe_ip_ids_#{known_ip.id}" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <%= field_set_tag t('admin.users.new.captions.password') do %>
    <dl class="form_fields">
      <div class="field">
        <dt><%= f.label :password, t('field_labels.password') %></dt>
        <dd><%= f.password_field :password, :size => 30, :maxlength => 255 %></dd>
      </div>
      <div class="field">
        <dt><%= f.label :password_confirmation,
                        t('field_labels.password_confirmation') %></dt>
        <dd><%= f.password_field :password_confirmation, :size => 30, :maxlength => 255 %></dd>
      </div>
    </dl>
  <% end %>

  <%= render 'comments_field', :f => f %>

  <div class="actions">
    <%= f.submit t('buttons.save') %>
  </div>
<% end %>
