<%= content_tag :table, :id => table_name, :class => 'associated records' do %>
  <colgroup class="attributes">
    <% displayed_columns.size.times do %><col /><% end %>
  </colgroup>
  <thead>
    <tr>
      <% displayed_columns.each do |attribute| %>
        <%- if Admin::User.columns_hash[attribute.to_s].type == :boolean -%>
          <th class='boolean'>
            <%= sortable table_name, attribute, Admin::User.human_attribute_name(attribute) %>
          </th>
        <%- else -%>
          <th>
            <%= sortable table_name, attribute, Admin::User.human_attribute_name(attribute) %>
          </th>
        <%- end -%>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render :partial => 'admin/users/user_in_index_for_association',
               :collection => users,
               :as => :user,
               :locals => { :displayed_columns => displayed_columns } %>
  </tbody>
<% end %>
