<%= content_tag :table, :id => table_name, :class => "associated records" do %>
  <colgroup><col /></colgroup>
  <colgroup><col /><col /><col /><col /><col /><col /></colgroup>
  <thead>
    <tr>
      <th><%= sortable table_name, :username, Admin::User.human_attribute_name(:username) %></th>

      <th><%= sortable table_name, :full_name, Admin::User.human_attribute_name(:full_name) %></th>

      <% [ :account_deactivated, :admin, :manager, :secretary, :a_person ].each do |attribute| %>
        <th class='boolean'>
          <%= sortable table_name, attribute, Admin::User.human_attribute_name(attribute) %>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render :partial => 'admin/users/user_in_index_for_association', :collection => users, :as => :user %>
  </tbody>
<% end %>
