<tr>
  <th scope=row>
    <%= link_to user.username, user,
                :title => t('actions.read'),
                :class => 'display' %>
  </th>

  <td><%= user.full_name %></td>

  <% [ :account_deactivated, :admin, :manager, :secretary, :a_person ].each do |attribute| %>
    <td class="boolean">
      <%= boolean_to_picto(user.public_send(attribute)) %>
    </td>
  <% end %>

  <td class="operation">
    <%= link_to edit_pictogram, edit_admin_user_path(user),
                :title => t('actions.update'),
                :class => 'modify' %>
  </td>

  <td class="operation">
    <%= link_to delete_pictogram, user,
                :confirm => t("questions.are_you_sure?"),
                :method  => :delete,
                :title   => t('actions.delete'),
                :class   => 'modify' %>
  </td>
</tr>
