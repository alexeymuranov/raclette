<h1><%= t '.header', :username => @user.username %></h1>

<h3><%= t 'admin.users.show.captions.user_data', :username => @user.username %></h3>
<!-- Rails bug here? (<p></p>): -->
<table style="width:auto;">
  <tr>
    <td><b><%= t 'field_labels.username' %></b></td>
    <td><b><%= @user.username %></b></td>
  </tr>

  <tr>
    <td><b><%= t 'field_labels.full_name' %></b></td>
    <td><%= @user.full_name %></td>
  </tr>

  <tr>
    <td><b><%= t 'field_labels.email' %></b></td>
    <td><%= @user.email %></td>
  </tr>

  <tr>
    <td><b><%= t 'field_labels.admin?' %></b></td>
    <td><%= @user.admin? ? t(:yes) : t(:no) %></td>
  </tr>

  <tr>
    <td><b><%= t 'field_labels.manager?' %></b></td>
    <td><%= @user.manager? ? t(:yes) : t(:no) %></td>
    </p>
  </tr>

  <tr>
    <td><b><%= t 'field_labels.secretary?' %></b></td>
    <td><%= @user.secretary? ? t(:yes) : t(:no) %></td>
  </tr>

  <tr>
    <td><b><%= t 'field_labels.person?' %></b></td>
    <td><%= @user.a_person? ? t(:yes) : t(:no) %></td>
  </tr>

  <% if @user.a_person? %>
    <tr>
      <td><b><%= t 'field_labels.person_id' %></b></td>
      <td><%= @user.person_id %></td>
    </tr>
  <% end %>

  <tr>
    <td><b><%= t 'field_labels.deactivated?' %></b></td>
    <td><%= @user.account_deactivated? ? t(:yes) : t(:no) %></td>
  </tr>
</table>

<hr/>

<h3><%= t 'admin.users.show.captions.authorized_ips' %></h3>

<table style="width:auto;">
  <% @user.safe_ips.each do |safe_ip| %>
    <tr>
      <td><%= link_to safe_ip.ip, safe_ip, :title => t('actions.read') %></td>
      <td><%= safe_ip.description %></td>
    </tr>
  <% end %>
</table>  

<hr/>

<h3><%= t 'admin.users.show.captions.other' %></h3>

<table style="width:auto;">
  <tr>
    <td><b><%= t('field_labels.last_signed_in_at') %></b></td>
    <td><%= @user.last_signed_in_at %>
  </tr>
  <tr>
    <td><b><%= t('field_labels.comments') %></b></td>
    <td><p><%= @user.comments %></p></td>
  </tr>
</table>  

<hr/>

<%= link_to edit_icon(2)+t('.links.update'),
            edit_admin_user_path(@user),
            :class => 'modify' %>
<%= link_to list_all_icon(2)+t('admin.users.links.show_all'), admin_users_path %>
