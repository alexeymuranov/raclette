<p id="notice"><%= notice %></p>

<p>
  <b><%= t('admin.users.labels.username') %></b>
  <%= @user.username %>
</p>

<p>
  <b><%= t('admin.users.labels.full_name') %></b>
  <%= @user.full_name %>
</p>

<p>
  <b><%= t('admin.users.labels.email') %></b>
  <%= @user.email %>
</p>

<p>
  <b><%= t('admin.users.labels.admin') %></b>
  <%= @user.admin? ? t(:yes) : t(:no) %>
</p>

<p>
  <b><%= t('admin.users.labels.manager') %></b>
  <%= @user.manager? ? t(:yes) : t(:no) %>
</p>

<p>
  <b><%= t('admin.users.labels.secretary') %></b>
  <%= @user.secretary? ? t(:yes) : t(:no) %>
</p>

<p>
  <b><%= t('admin.users.labels.person') %></b>
  <%= @user.a_person? ? t(:yes) : t(:no) %>
</p>

<% if @user.a_person? %>
  <p>
    <b><%= t('admin.users.labels.person_id') %></b>
    <%= @user.person_id %>
  </p>
<% end %>

<table>
  <caption style="text-align:center;" ><%= t 'admin.users.show.captions.authorized_ips' %></caption>
  <tr>
    <th>
      <%= t 'field_labels.ip' %>
    </th>
    <th>
      <%= t 'field_labels.description' %>
    </th>
  </tr>
  <% @user.safe_ips.each do |safe_ip| %>
  <tr>
    <td>
      <%= safe_ip.ip %>
    </td>
    <td>
      <%= safe_ip.description %>
    </td>
  </tr>
  <% end %>
</table>  

<p>
  <b><%= t('admin.users.labels.last_signed_in_at') %></b>
  <%= @user.last_signed_in_at %>
</p>

<p>
  <b><%= t('admin.users.labels.comments') %></b>
  <%= @user.comments %>
</p>


<%= link_to edit_icon(2)+t('.links.update'),
            edit_admin_user_path(@user),
            :class => 'modify' %> |
<%= link_to list_all_icon(2)+t('admin.users.links.show_all'), admin_users_path %>
