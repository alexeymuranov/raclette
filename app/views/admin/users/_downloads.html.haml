= t 'actions.download_resources:',
    :resources => t('admin.users.index.terms.filtered_users')
= form_tag({ :format => :ms_excel_2003_xml },
             :method => :get,
             :id     => 'download_users_in_ms_excel_2003_xml',
             :target => '_blank',
             :style  => 'display:inline' ) do

  = hidden_fields_from_nested_hash params.slice(:filter, :sort, :per_page)

  %span.actions
    = hidden_field_tag :query_type, 'render_alternative_format'
    = button_tag 'MS Excel 2003 XML',
                 :name  => 'button',
                 :type  => 'submit',
                 :value => 'download'

= form_tag({ :format => :csv },
             :method => :get,
             :id     => 'download_users_in_csv',
             :target => '_blank',
             :style  => 'display:inline' ) do

  = hidden_fields_from_nested_hash params.slice(:filter, :sort, :per_page)

  %span.actions
    = hidden_field_tag :query_type, 'render_alternative_format'
    = button_tag 'CSV',
                 :name  => 'button',
                 :type  => 'submit',
                 :value => 'download'
