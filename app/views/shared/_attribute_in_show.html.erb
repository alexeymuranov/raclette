<div class="entry">
  <%- case model.class.columns_hash[attribute.to_s].type -%>
  <%- when :boolean -%>
    <dt><%= t 'formats.attribute_name?', :attribute => model.class.human_attribute_name(attribute) %></dt>
    <dd><%= boolean_to_yes_no(model.public_send(attribute)) %></dd>
  <%- when :datetime -%>
    <dt><%= t 'formats.attribute_name:', :attribute => model.class.human_attribute_name(attribute) %></dt>
    <dd><%= l model.public_send(attribute), :format => :custom %></dd>
  <%- else -%>
    <dt><%= t 'formats.attribute_name:', :attribute => model.class.human_attribute_name(attribute) %></dt>
    <dd><%= model.public_send(attribute) %></dd>
  <%- end -%>
</div>
