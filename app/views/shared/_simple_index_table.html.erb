<%# Locals:
      models:
      attributes:
      column_types:
      column_headers:
      html_table_id:
-%>

<%= content_tag :table, :id => html_table_id, :class => 'records' do %>
  <colgroup class="attributes">
    <% attributes.size.times do %><col /><% end %>
  </colgroup>
  <thead>
    <tr>

      <%= render 'shared/sorting_table_headers',
                 :attributes     => attributes,
                 :column_types   => column_types,
                 :column_headers => column_headers,
                 :html_table_id  => html_table_id %>

    </tr>
  </thead>

  <%= render 'shared/simple_index_table_body',
             :models       => models,
             :attributes   => attributes,
             :column_types => column_types %>

<% end %>
