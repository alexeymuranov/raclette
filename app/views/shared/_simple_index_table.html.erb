<%# Locals:
      models:
      attributes:
      column_types_o_hash:
      klass:
      table_name:
-%>

<%= content_tag :table, :id => table_name, :class => 'records' do %>
  <colgroup class="attributes">
    <% attributes.size.times do %><col /><% end %>
  </colgroup>
  <thead>
    <tr>

      <%= render 'shared/sorting_table_headers',
                 :column_types_o_hash => column_types_o_hash,
                 :klass               => klass,
                 :table_name          => table_name %>

    </tr>
  </thead>

  <%= render 'shared/simple_index_table_body',
             :models                  => models,
             :attributes              => attributes,
             :column_types_o_hash     => column_types_o_hash %>

<% end %>
