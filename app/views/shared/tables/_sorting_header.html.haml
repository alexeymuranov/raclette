-# Locals:
-#   attribute:
-#   column_type:
-#   column_header:
-#   html_table_id:

- case column_type
- when :boolean, :delegated_boolean, :virtual_boolean
  %th.boolean
    = sortable html_table_id, attribute, column_header
- when :integer, :delegated_integer, :virtual_integer
  %th.number
    = sortable html_table_id, attribute, column_header
- else
  %th
    = sortable html_table_id, attribute, column_header
