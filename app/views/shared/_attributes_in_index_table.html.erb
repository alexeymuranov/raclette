<%# Locals:
      model:
      attributes:
      column_types:
-%>

<th scope=row>
  <%= link_to model.public_send(attributes[0]), model,
              :title => t('actions.read'),
              :class => 'display resource' %>
</th>

<%- attributes[1..-1].each do |attr| -%>

  <%= render 'shared/simple_attribute_in_table',
             :column_type => column_types[attr],
             :value       => model.public_send(attr) %>

<%- end -%>
