<%# Locals:
  klass:
  column_types_o_hash:
-%>

<% column_types_o_hash.each do |attr, col_type| %>
  <%- case col_type -%>
  <%- when :boolean -%>
    <th class="boolean">
      <%= sortable table_name, attr, klass.human_attribute_name(attr) %>
    </th>
  <%- else -%>
    <th>
      <%= sortable table_name, attr, klass.human_attribute_name(attr) %>
    </th>
  <%- end -%>
<% end %>
