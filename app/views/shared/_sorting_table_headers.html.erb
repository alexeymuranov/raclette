<%# Locals:
  klass:
  attributes:
  column_types:
-%>

<% attributes.each do |attr| %>
  <%- case column_types[attr] -%>
  <%- when :boolean -%>
    <th class="boolean">
      <%= sortable table_name, attr, klass.human_attribute_name(attr) %>
    </th>
  <%- else -%>
    <th>
      <%= sortable table_name, attr, klass.human_attribute_name(attr) %>
    </th>
  <%- end -%>
<% end %>
