<h1><%= t '.header' %></h1>

<section>

  <h2><%= t 'headers.data' %></h2>

  <section>

    <h3><%= link_to list_all_pictogram(2) + ' ' + t('instructors.index.title'),
                    instructors_path,
                    :class => 'display resource' %></h3>

    <ul class="compact">
      <%- @instructors.each do |instructor| -%>
        <li><%= link_to show_pictogram(2) + ' ' + instructor.full_name,
                        instructor_path(instructor),
                        :class => 'display resource' %></li>
      <%- end -%>
    </ul>

    <footer>
      <%= link_to add_pictogram(2) + ' ' + t('instructors.new.header'),
                  new_instructor_path,
                  :title => t('actions.create'),
                  :class => 'add resource' %>
    </footer>

  </section>

  <section>

    <h3><%= link_to list_all_pictogram(2) + ' ' + t('events.index.title'),
                    events_path,
                    :class => 'display resource' %></h3>

    <ul class="compact">
      <%- @events.each do |event| -%>
        <li><%= link_to show_pictogram(2) + ' ' + event.title,
                        event_path(event),
                        :class => 'display resource' %></li>
      <%- end -%>
    </ul>

    <footer>
      <%= link_to add_pictogram(2) + ' ' + t('events.new.header'),
                  new_event_path,
                  :title => t('actions.create'),
                  :class => 'add resource' %>
    </footer>

  </section>

</section>

<section>

  <h2><%= t 'headers.tools' %></h2>

</section>

<%# End of the main body of the view %>

<% content_for :side_menu_list_items do %>
  <li>
    <%= link_to list_all_pictogram + ' ' + t('instructors.index.title'),
                instructors_path,
                :class => 'display resource' %>
  </li>
  <li>
    <%= link_to list_all_pictogram + ' ' + t('events.index.title'),
                events_path,
                :class => 'display resource' %>
  </li>
<% end %>
