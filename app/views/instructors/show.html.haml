%h1= t '.header', :name => @instructor.virtual_full_name

%section
  %dl.show

    = render 'shared/lists/description',
      :object     => @instructor,
      :attributes => @attribute_names

%footer
  = link_to edit_pictogram(3) + ' ' + t('instructors.edit.header',
                                        :name => @instructor.virtual_full_name),
            edit_instructor_path(@instructor),
            :class => 'modify resource'
  = link_to list_all_pictogram(3) + ' ' + t('instructors.index.header'),
            instructors_path,
            :class => 'display resource'

-# End of the main body of the view

- content_for :side_menu_list_items do
  %li
    = link_to list_all_pictogram + ' ' + t('instructors.index.title'),
              instructors_path,
              :class => 'display resource'
  %li
    = link_to add_pictogram + ' ' + t('instructors.new.title'),
              new_instructor_path,
              :title => t('actions.create'),
              :class => 'add resource'
