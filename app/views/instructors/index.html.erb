<hgroup>
  <h1><%= t '.header' %></h1>

  <h2 id="instructors_count">
    <% if @filtering_values.blank? %>
      <%= t '.count_total', :count => Instructor.count %>
    <% else %>
      <%= t '.count_filtered', :count => @instructors.size,
                               :total => Instructor.count %>
    <% end %>
  </h2>
</hgroup>

<div id="instructors_table">

  <%= render 'shared/filtered_index_table',
             :models           => @instructors,
             :attributes       => @attributes,
             :column_types     => @column_types,
             :column_headers   => @column_headers,
             :html_table_id    => :instructors,
             :filtering_values => @filtering_values %>

</div>

<%= render('downloads') %>

<div id="instructors_mailing_list">

  <%= render('emailing_list') %>

</div>

<footer>
  <%= link_to add_pictogram(2) + ' ' + t('instructors.new.header'),
              new_instructor_path,
              :title => t('actions.create'),
              :class => 'add resource' %>
</footer>

<%# End of the main body of the view %>

<% content_for :side_menu_list_items do %>
  <li><%= link_to add_pictogram + ' ' + t('instructors.new.title'),
                  new_instructor_path,
                  :title => t('actions.create'),
                  :class => 'add resource' %></li>
<% end %>
