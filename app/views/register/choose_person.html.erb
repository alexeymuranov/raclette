<h1><%= t '.header' %></h1>

<section>
  <h2><%= t '.choose_member' %></h2>

  <ul class="compact">
    <%- @members.each do |member| -%>
      <li><%= link_to select_pictogram + ' ' + member.ordered_full_name,
                      { :action    => :compose_transaction,
                        :member_id => member.id },
                      :class => 'select resource' %></li>
    <%- end -%>
  </ul>

</section>

