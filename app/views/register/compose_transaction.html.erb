<h1><%= t '.header' %></h1>

<header>
  <nav class="tabs">
    <ul class="tabs"><!-- no space!
      <%- 3.times do |i| -%>
        <%- if i == @tab -%>
       --><li class="tab current">
            <span>
              <%= t('register.compose_transaction.tabs')[i] -%>
            </span>
          </li><!-- no space!
        <%- else -%>
       --><li class="tab">
            <%= link_to t('register.compose_transaction.tabs')[i],
                        params.merge(:tab => i) -%>
          </li><!-- no space!
        <%- end -%>
      <%- end -%>
 --></ul>
  </nav>
</header>

<% case @tab %>
<% when 0 %>
  <%= render 'compose_entry'%>
<% when 1 %>
  <%= render 'compose_tickets_purchase'%>
<% when 2 %>
  <%= render 'compose_membership_purchase'%>
<% else %>
  <p>ERROR!</p>
<% end %>