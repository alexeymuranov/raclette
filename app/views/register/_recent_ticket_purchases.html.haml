%aside#recent_ticket_purchases
  -# NOTE: using <a name="..."> as an anchor:
  %a{:name => 'recent_ticket_purchases'}
  %section#ticket_purchases
    - unless @recent_ticket_purchases.nil?
      %h2= t 'register.choose_person.subheaders.recent_ticket_purchases'
      %ol
        - @recent_ticket_purchases.each do |p|
          %li= p.tickets_number

    -# NOTE: using 'action' only to scroll to the anchor.
    -# TODO: add :'data-remote' => 'true' and fix it.
    %form{:action => '#recent_ticket_purchases', :method => 'get'}
      = hidden_fields_from_nested_hash @saved_params
      %span.actions
        - if @recent_ticket_purchases.nil?
          %button{ :name  => 'button',
                   :type  => 'submit',
                   :value => 'show_recent_ticket_purchases' }
            = t('buttons.show_recent_ticket_purchases')
        - else
          %button{ :name  => 'button',
                   :type  => 'submit',
                   :value => 'hide_recent_ticket_purchases' }
            = t('buttons.hide_recent_ticket_purchases')
