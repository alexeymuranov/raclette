%header
  %nav.tabs
    %ul
      - @tabs.each do |tab|
        - tab_title = t(:title, :scope => [:register, tab])
        - if tab == @tab
          %li.tab.enabled.active>
            %span.tab= tab_title
        - else
          %li.tab.enabled.inactive>
            /TODO:use forms with hidden fields for tabs?/
            = link_to tab_title,
                params.slice(:person_id, :guest,
                  :event_id).merge( :action => 'compose_transaction',
                                    :tab    => tab ),
                :class => 'tab'
