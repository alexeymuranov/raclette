%nav.main_menu
  %ul
    - if current_user
      %li>
        = link_to t("monitor.overview.title"), monitor_overview_path
      %li>
        = link_to t("register.choose_person.title"),
                  register_choose_person_path
      - if current_user.secretary?
        %li>
          = link_to t("secretary_tools.overview.title"),
                    secretary_tools_overview_path
      - else
        %li.disabled>
          %span.disabled_link>
            = t("secretary_tools.overview.title")
      - if current_user.manager?
        %li>
          = link_to t("manager_tools.overview.title"),
                    manager_tools_overview_path
      - else
        %li.disabled>
          %span.disabled_link>
            = t("manager_tools.overview.title")
      - if current_user.admin?
        %hr
        %li>
          = link_to t("admin.admin_tools.overview.title"),
                    admin_admin_tools_overview_path
      - else
        %hr
        %li.disabled>
          %span.disabled_link>
            = t("admin.admin_tools.overview.title")
    - else
      %li>
        = link_to t('sessions.new.log_in_please'), login_path
