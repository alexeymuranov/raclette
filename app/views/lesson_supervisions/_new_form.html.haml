= form_for @lesson_supervision, :as  => :lesson_supervision,
                                :url => @lesson_supervision_form_url do |f|

  = render 'shared/error_messages/validation', :target => @lesson_supervision

  %dl.form_fields
    - @attributes.each do |attribute|

      = render 'shared/forms/attribute',
               :form_builder => f,
               :attribute    => attribute

    .dl_item.field
      %dt
        = t 'formats.attribute_name:',
            :attribute => LessonSupervision.human_attribute_name(:instructors)
      %dd.list.select_multiple
        = f.collection_select :instructor_ids, Instructor.all,
                              :id, :virtual_professional_name,
                              {},
                              { :multiple => true }

  .actions
    = f.submit
