= form_for @lesson_supervision, :as  => :lesson_supervision,
                                :url => @lesson_supervision_form_url do |f|

  = render 'shared/error_messages/validation', :target => @lesson_supervision

  %dl.form_fields
    - @attribute_names.each do |attr_name|

      = render 'shared/forms/attribute',
               :form_builder => f,
               :attribute    => attr_name

    = render 'shared/forms/habtm_association',
             :form_builder               => f,
             :association                => :instructors,
             :association_name_attribute => :virtual_professional_name

  .actions
    = f.submit
