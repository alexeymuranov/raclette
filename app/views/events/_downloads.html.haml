= t('actions.download_resources:', :resources => t('events.index.terms.filtered_events'))
= form_tag({ :format => :ms_excel_2003_xml },
             :method => :get,
             :id     => 'download_events_in_ms_excel_2003_xml',
             :target => '_blank',
             :style  => 'display:inline' ) do
  = hidden_field_tags_from_hash params.slice(:filter, :sort, :per_page)
  %span.actions
    = hidden_field_tag :query_type, 'render_alternative_format'
    = content_tag :button, 'MS Excel 2003 XML',
                  :name  => 'button',
                  :type  => 'submit',
                  :value => 'download_button'
= form_tag({ :format => :csv },
             :method => :get,
             :id     => 'download_events_in_csv',
             :target => '_blank',
             :style  => 'display:inline' ) do
  = hidden_field_tags_from_hash params.slice(:filter, :sort, :per_page)
  %span.actions
    = hidden_field_tag :query_type, 'render_alternative_format'
    = content_tag :button, 'CSV',
                  :name  => 'button',
                  :type  => 'submit',
                  :value => 'download_button'
